

<div class="container">
 <h1>Members</h1>

  <div id="members">

    <table class="table table-striped">
      <tbody>
                 <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Email</th>
            <th scope="col">Games Played</th>
            <th scope="col">Rank</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <% @members.each do |member| %>

        <tr>
          <td><%= member.name %></td>
          <td><%= member.surname %></td>
          <td><%= member.email_address %></td>
          <td><%= member.no_of_games_played == nil ? "0" : member.no_of_games_played%></td>
          <td><%= member.current_rank %></td>
          <td><%= link_to " View ", member, class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
   
  </div>
  <div class="mt-4">
    <%= link_to "Add Member", new_member_path, class: "btn btn-primary" %>
  </div>
</div>


